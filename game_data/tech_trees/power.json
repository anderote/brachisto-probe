  "cross_effects": {
    "all_systems": {
      "description": "Power limits all energy-consuming operations",
      "formula": "max_operation_rate = available_power / power_per_operation"
    },
    "propulsion": {
      "description": "Electric propulsion thrust limited by power",
      "formula": "thrust = 2 × power × efficiency / exhaust_velocity"
    },
    "mass_driver": {
      "description": "Launch rate limited by power recharge",
      "formula": "shots_per_day = power × efficiency × 86400 / energy_per_shot"
    },
    "computing": {
      "description": "Compute capacity scales with power",
      "formula": "flops = power / watts_per_flop"
    },
    "thermal": {
      "description": "Power generation creates waste heat",
      "formula": "waste_heat = power × (1 - efficiency)"
    }
